<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/profile_baground"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/loginpageTheme">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/studentImag"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="5dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/mexx"
        app:border_width="1dp"
        app:border_color="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/student_name"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:paddingLeft="5dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textColor="#ffffff"
        android:text="SriDatta Yalla"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/studentImag"
        app:layout_constraintTop_toTopOf="@+id/studentImag" />

    <TextView
        android:id="@+id/jntu_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="5dp"
        android:textColor="#ffffff"
        android:text="No Internet Connection"
        android:textAllCaps="true"
        app:layout_constraintStart_toEndOf="@+id/studentImag"
        app:layout_constraintTop_toBottomOf="@+id/student_name" />

</android.support.constraint.ConstraintLayout>
